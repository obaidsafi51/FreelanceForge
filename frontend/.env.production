# Production environment configuration for FreelanceForge

# Network Configuration
VITE_NETWORK=paseo
VITE_PASEO_RPC_1=wss://paseo.dotters.network
VITE_PASEO_RPC_2=wss://rpc.ibp.network/paseo
VITE_PASEO_RPC_3=wss://paseo.rpc.amforc.com

# Security Configuration
VITE_ENABLE_SECURITY_MIDDLEWARE=true
VITE_ENABLE_CSP_REPORTING=true

# Performance Configuration
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Build Configuration
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=__BUILD_TIMESTAMP__

# Feature Flags
VITE_ENABLE_MOCK_DATA_IMPORT=true
VITE_ENABLE_PORTFOLIO_SHARING=true
VITE_ENABLE_EXPORT_FUNCTIONALITY=true

# Rate Limiting (client-side)
VITE_RATE_LIMIT_MINUTE=10
VITE_RATE_LIMIT_HOUR=100
VITE_CREDENTIAL_LIMIT=500

# Security Headers (for nginx configuration reference)
# X-Frame-Options: SAMEORIGIN
# X-Content-Type-Options: nosniff
# X-XSS-Protection: 1; mode=block
# Referrer-Policy: strict-origin-when-cross-origin
# Permissions-Policy: camera=(), microphone=(), geolocation=()